<%= form_for(@article, html: {multipatr: true}) do |f| %>
	<ul>
		<%= @article.errors.full_messages.each do |error| %>
			<li><%= error %></li>
		<% end %>
	</ul>
	<p>
		<%= f.label :title %><br />
		<%= f.text_field :title %>
	</p>
	<p>
		<%= f.label :body %><br />
		<%= f.text_area :body %>
	</p>
	<p>
		<%= f.label :tag_list %><br />
		<%= f.text_field :tag_list %>
	</p>
	<p>
	  <% if @article.image.exists? %>
	      <%= image_tag @article.image.url, width: '300px' %><br/>
	  <% end %>
	  <%= f.label :image, "Attach a New Image" %><br />
	  <%= f.file_field :image %>
	</p>
	<p>
		<%= f.submit %>
	</p>
<% end %>